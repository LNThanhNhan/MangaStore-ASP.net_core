@model List<Sample>
@foreach(var sample in Model)
{
    <div class="d-flex justify-content-center">
        <img class="img-fluid" src="@sample.image" alt="Truyện xem thử">
    </div>
}
<div class="d-flex justify-content-center align-items-center mb-4 mt-4">
    <a asp-controller="Product" asp-action="Edit" class="btn btn-primary my-1" >Quay về</a>
    <form asp-controller="Sample" asp-action="Add" class="d-flex align-items-center d-grid gap-1">
        <button type="submit" class="btn btn-success ms-3">Thêm ảnh</button>
        <input type="hidden" name="id" value="@ViewBag.product_id" />
        <input name="image" class="my-2" type="text" >
    </form>
    <form asp-controller="Sample" asp-action="DeleteLast">
        <input type="hidden" name="id" value="@ViewBag.product_id" />
        <button class="btn btn-danger mx-1">Xóa ảnh cuối</button>
    </form>
    <form asp-controller="Sample" asp-action="DeleteAll">
        <input type="hidden" name="id" value="@ViewBag.product_id" />
        <button class="btn btn-danger mx-1">Xóa tất cả</button>
    </form>
</div>

@section js{
    <script>
        $(document).ready(function(){
            window.scrollTo(0,document.body.scrollHeight);
        });
    </script>
}
